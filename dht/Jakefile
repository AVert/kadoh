//*************UTIL*********************

var extractDep= function(code) {
  var dep = [];
  code = code.split('\n').forEach(function(line){
    //extract : '// dep : [keyword]/path/to/lib
    var extracted = line.match(/\s*\/\/\s*Dep\s*:\s*\[(.*)\](\S*)\s*.*/gi);
    
    if(extracted != null) {
      keyword = extracted[0];
      path = extracted[1];
      
      if(path.split('')[0]==='/') { path = path.split(''); path.shift();  path = path.join('');}
      
      dep.push(KEYWORD_FOLDER[keyword]+path);
    }
  });
  
  return dep;
};


desc('Test the DHT libs');
task('test', ['build'], function() {
  proc = require('child_process');
  
  proc.exec('vows test/* --spec', function(err, stdout, stderr) {
    if (err) {
      console.error('!ERROR!');
      console.error(err.message);
    }
    else
      console.log(stdout);
  });
});
